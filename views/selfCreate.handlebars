<div class="row">
    <div class"create-page-title"><h2><strong>Create a new blog post</strong></h2></div>
    <form class"form create-post">
        <div class='form-group'>
            <label for="create-post-title">Title:</label>
            <textarea class="form-input" type="text" id="new-post-title" placeholder="Title required"></textarea>
        </div>
        <div class='form-group'>
            <label for="create-post-content">Content:</label>
            <textarea class="form-input" type="text" id="new-post-content" placeholder="Content required"></textarea>
        </div>
    </form>
</div>
<div class="row justify-center">
    <a href="/" class="w3-button w3-large w3-circle w3-xlarge w3-ripple addPostBtn">Create post!</a>
</div>
<script src='/js/createPost.js'></script>