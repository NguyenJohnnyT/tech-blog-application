{{!-- Build the html --}}
<div class="row">
    <div class"create-page-title"><h2 class='title'><strong>Create a new blog post</strong></h2></div>
    <form class"form create-post">
        <div class='form-group'>
            <label for="create-post-title" class="title" style="font-size: 30px;">Title:</label>
            <textarea class="form-input" type="text" id="new-post-title" placeholder="Title required"></textarea>
        </div>
        <div class='form-group'>
            <label for="create-post-content" class="title" style="font-size: 30px;">Content:</label>
            <textarea class="form-input" type="text" id="new-post-content" placeholder="Content required"></textarea>
        </div>
    </form>
</div>
<div class="row justify-center">
    <button type='submit' class="w3-button w3-large w3-circle w3-xlarge w3-ripple" id='addPostBtn'>Create post!</button>
</div>
<script src='/js/createPost.js'></script>