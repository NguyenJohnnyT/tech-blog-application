{{!-- Displays a single post and also the ability to add a comment --}}
{{!-- 
'post' OBJECT  
{
    id,
    title, (blogpost title)
    content, (blogpost content)
    date, (format)
    user_id,
    user : {
        username (op's username)
        }
    comments: [
        {
            content (comment)
            date: (format)
            user: {
                username (commenter's username)
            }
        },
        ...{},
    ]
}
--}}
<div>
    <section class="card p-3 post blog-card">
        <h3>{{post.title}}</h3>
        <hr>
        <p>{{post.content}}</p>
        <br>
        <p class = "flex-row align-end signature">Written by {{post.user.username}} on {{post.date}}</p>

    </section>
</div>